{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build OpenGL",
      "type": "shell",
      "command": "g++",
      "args": [
        "-IC:/MinGW/include",
        "-LC:/MinGW/lib",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe",
        "-lfreeglut",
        "-lopengl32",
        "-lglu32"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
